<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_uvsq">

    <Button
        android:id="@+id/BT_emailButton"
        android:layout_width="125dp"
        android:layout_height="65dp"
        android:layout_marginStart="148dp"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="101dp"
        android:layout_marginEnd="149dp"
        android:layout_marginRight="149dp"
        android:layout_marginBottom="235dp"
        android:onClick="getAndSendEmail"
        android:text="@string/boutonEnvoyer"
        app:backgroundTint="@color/green_uvsq"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailForgotPassword" />

    <EditText
        android:id="@+id/emailForgotPassword"
        android:layout_width="370dp"
        android:layout_height="38dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="292dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="101dp"
        android:ems="10"
        android:hint="@string/textEmailForgotPassword"
        android:inputType="textEmailAddress|textNoSuggestions"
        android:textColor="@color/white"
        app:backgroundTint="@color/green_uvsq"
        app:layout_constraintBottom_toTopOf="@+id/BT_emailButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
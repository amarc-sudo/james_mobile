<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iut.james_mobile">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_james"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_james_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Jamesmobile">
        <activity android:name=".AppelActivity" />
        <activity android:name=".ForgotPasswordActivity" />
        <activity android:name=".SignatureActivity" />
        <activity android:name=".ParametreActivity" />
        <activity android:name=".WelcomeActivity"></activity>
        <activity android:name=".EmailChangeActivity"></activity>
        <activity android:name=".LanguageActivity"></activity>
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>